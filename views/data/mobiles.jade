extends ../layout.jade
block siden
	include sidenav.jade

block main
	div.editor
		block content
			div.center
				a(class="ui inverted green button" href="/data/addphone") Add Phone
				p
				form(action="/data/mobileDataRetrieve", method="POST")
					table(border="1" cellpadding="5" cellspacing="5" width="100%" height="35")
						th(bgcolor="#A5FF7F" height="50")
							| Phone Number
						th(bgcolor="#A5FF7F" height="50")
							| Enbaled Feature
						th(bgcolor="#A5FF7F" height="50")
							| Enbaled Feature
						th(bgcolor="#A5FF7F" height="50")
							| Enbaled Feature
						th(bgcolor="#A5FF7F" height="50")
							| View
						each val,index in data
								tr
									td
										| Phone #{index+1}
									each dat in val.features
										td
											| #{dat}
									td(align="center")
										input(type="checkbox" name="mobcheck" value="#{val.userid}"+"+"+"#{val.mobid}")
					p
					input(class="ui inverted blue button" type="submit" value="View Selected Sensor Data")
									
block post_wrap