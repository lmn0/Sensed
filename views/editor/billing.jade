extends ../layout.jade
block siden
    include sidenav.jade

block main
    div.editor
        block content
            div.center
                form(action="/data/retrieve", method="POST")

                    table(border="1" cellpadding="5" cellspacing="5" width="100%" height="35")
                        th(bgcolor="#F7819F" height="50")
                            | Location
                        th(bgcolor="#F7819F" height="50")
                            | Sensor Name
                        th(bgcolor="#F7819F" height="50")
                            | Booked From
                        th(bgcolor="#F7819F" height="50")
                            | Booked To
                        th(bgcolor="#F7819F" height="50")
                            | Amount
                        each val in subscription
                            each dat in val.subscribedto
                                tr
                                    td
                                        | #{val.station}
                                    td
                                        | #{dat.sensorname}
                                    td
                                        | #{val.from}
                                    td
                                        | #{val.to}
                                    td
                                        | #{dat.costPerMonth} $
                    br

block post_wrap
